<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codermy.myspringsecurityplus.admin.dao.DictDetailDao">
    <sql id="selectDictDetailVo">
        select did.id,did.dict_id,did.label,did.value,did.sort,did.create_by,did.create_time,did.update_by,did.update_time,did.enabled
        from sys_dict_detail did
    </sql>
    
    <select id="getDictDetail" parameterType="integer" resultType="com.codermy.myspringsecurityplus.admin.entity.SysDictDetail">
        <include refid="selectDictDetailVo"/>
        where did.dict_id = #{dictId} AND enabled = 1
    </select>

    <update id="updateDictDetail" parameterType="com.codermy.myspringsecurityplus.admin.entity.SysDictDetail">
        update sys_dict_detail
        <set>
            <if test="label != null and label != ''">label = #{label},</if>
            <if test="value != null">value = #{value},</if>
            <if test="sort != null and sort != ''">sort = #{sort},</if>
        </set>
        where id = #{id}
    </update>

    <update id="deleteDictDetailByIds" parameterType="integer">
        update sys_dict_detail
        set enabled = 0
        where id in
        <foreach collection="Ids" item="Id" open="(" separator="," close=")">
            #{Id}
        </foreach>
    </update>

    <update id="deleteDictDetailByDictId" parameterType="integer">
        update sys_dict_detail
        set enabled = 0
        where dict_id = #{dictId}
    </update>
</mapper>
