<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codermy.myspringsecurityplus.admin.dao.UserDao">

    <sql id="SysUserEntity">
        SELECT
            u.user_id,u.type,u.dept_id,u.user_name,u.password,u.nick_name,u.phone,u.email,u.status,u.create_by,u.create_time,u.update_by,u.update_time,u.enabled
        FROM sys_user u
    </sql>

    <select id="getFuzzyUserByPage" resultType="com.codermy.myspringsecurityplus.admin.entity.SysUser">
        <include refid="SysUserEntity"></include>
        left join sys_dept d on u.dept_id = d.dept_id
        <where>
            <if test="nickName != null and nickName != ''">
                AND u.nick_name like CONCAT('%', #{nickName}, '%')
            </if>
            <if test="userName != null and userName != ''">
                AND u.user_name like CONCAT('%', #{userName}, '%')
            </if>
            <if test="deptId != null and deptId != ''">
                AND (u.dept_id = #{deptId} OR u.dept_id IN ( SELECT e.dept_id FROM sys_dept e WHERE FIND_IN_SET(#{deptId},ancestors) ))
            </if>
            AND u.enabled = 1
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
        ORDER BY u.user_id
    </select>

    <select id="checkPhoneUnique" parameterType="String" resultType="com.codermy.myspringsecurityplus.admin.entity.SysUser">
		select u.user_id,u.phone from sys_user u where u.phone = #{phone} and u.enabled = 1 limit 1
	</select>

    <select id="checkUsernameUnique" parameterType="String" resultType="com.codermy.myspringsecurityplus.admin.entity.SysUser">
		select u.user_id,u.user_name from sys_user u where u.user_name = #{userName} and u.enabled = 1 limit 1
	</select>

    <update id="updateUser">
        update sys_user u
        <set>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="deptId != null">
                dept_id = #{deptId},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="nickName != null">
                nick_name = #{nickName},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where u.user_id = #{userId}
    </update>
</mapper>
