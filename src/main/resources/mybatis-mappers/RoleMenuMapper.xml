<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codermy.myspringsecurityplus.admin.dao.RoleMenuDao">

    <insert id="save">
        insert into sys_role_menu(role_id, menu_id, enabled) values
        <foreach collection="menuIds" item="menuId"
                 separator=",">
            (#{roleId}, #{menuId}, 1)
        </foreach>
    </insert>

</mapper>
