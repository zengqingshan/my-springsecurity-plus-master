<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codermy.myspringsecurityplus.admin.dao.UserJobDao">
    <insert id="batchUserJob">
        insert into sys_user_job(user_id, job_id, enabled) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.userId},#{item.jobId},#{item.enabled})
        </foreach>
    </insert>

<!--    <delete id="deleteUserJobByUserId" parameterType="Integer">-->
<!--		delete from sys_user_job where user_id=#{id}-->
<!--	</delete>-->
    <update id="deleteUserJobByUserId" parameterType="Integer">
        UPDATE sys_user_job
        SET enabled = 0
        WHERE user_id=#{id}
    </update>
</mapper>
